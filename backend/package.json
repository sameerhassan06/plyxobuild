{
  "name": "designhub-platform",
  "version": "1.0.0",
  "description": "All-in-one design platform with Penpot, TLDraw, GrapesJS integration",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "build": "npm run build:frontend && npm run build:tools",
    "build:frontend": "cd frontend && npm run build",
    "build:tools": "npm run build:tldraw && npm run build:grapesjs",
    "build:tldraw": "cd tools/tldraw && npm run build",
    "build:grapesjs": "cd tools/grapesjs && npm run build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "db:migrate": "node scripts/migrate.js",
    "test": "jest"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "passport-jwt": "^4.0.1",
    "jsonwebtoken": "^9.0.0",
    "bcrypt": "^5.1.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "cors": "^2.8.5",
    "express-session": "^1.17.3",
    "stripe": "^14.5.0",
    "archiver": "^6.0.1",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "@types/node": "^20.8.0"
  }
}